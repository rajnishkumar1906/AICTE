<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginVertical="20dp">

    <ImageView
        android:src="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:background="@drawable/gradient_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/img_6"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title - larger text -->
        <TextView
            android:text="Our Mission"
            android:textStyle="bold"
            android:textColor="@color/apptheme"
            android:textSize="25sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- All other text views - reduced text size -->
        <TextView
            android:text="A true facilitator and an objective regulator;"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Transparent governance and accountable approach towards the society;"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Planned and coordinated development of Technical Education in the country by ensuring world-class standards of institutions through accreditation;"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Emphasis on developing high quality institutions, academic excellence, and innovative research and development programmes;"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Networking with/ or a network of institutions for optimum resource utilization;"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginVertical="5dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>